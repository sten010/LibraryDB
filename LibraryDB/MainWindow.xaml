<Window x:Class="LibraryDB.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LibraryDB"
        mc:Ignorable="d"
        Title="MainWindow" Height="900" Width="1600" VerticalAlignment="Top" HorizontalAlignment="Center">
    <Grid Margin="0,0,0,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Frame Name="PageFrame" Margin="0,0,0,0" NavigationUIVisibility="Hidden" Grid.Row="1" />
        
        <StackPanel Grid.Column="3" Orientation ="Horizontal">
            <Button x:Name="Labery" Content="Библиотеки" Width="100" Click="Labery_Click"  />
            <Button x:Name="Workers" Content="Работники" Width="100" Click="Workers_Click" />
            <Button x:Name="Zone" Content="Зоны" Width="100" Click="Zone_Click" />
            <Button x:Name="Book" Content="Книги" Width="100" Click="Book_Click" />
            <Button x:Name="Code" Content="Коды" Width="100" Click="Code_Click" />
        </StackPanel>
        

    </Grid>
</Window>
